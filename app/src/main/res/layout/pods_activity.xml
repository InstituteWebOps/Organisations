<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    app:cardCornerRadius="8dp"
    android:elevation="4dp"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_pod"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/image_border"
        android:src="@drawable/podda"
        android:layout_margin="8dp" />
    <TextView
        android:id="@+id/tv_org"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_pod"
        android:layout_marginTop="10dp"
        android:textColor="@color/com_facebook_blue"
        android:text="Pod, da" />

    <TextView
        android:id="@+id/tv_post_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_pod"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="12dp"
        android:textSize="16dp"
        android:text="TextView" />

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/iv_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:background="@drawable/image_border"
        android:adjustViewBounds="true"
        android:layout_below="@+id/tv_post_des"
        android:layout_margin="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:background="#000000"
        android:layout_below="@+id/iv_content"
        android:id="@+id/v_bottom"/>

    <com.facebook.share.widget.LikeView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_bottom"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/tv_likes"
        android:id="@+id/fb_like"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No of likes"
        android:id="@+id/tv_likes"
        android:layout_below="@+id/v_bottom"
        android:textSize="12sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toRightOf="@+id/tv_status"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No of Likes: "
        android:layout_below="@+id/v_bottom"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:id="@+id/tv_status"/>




</RelativeLayout>
</android.support.v7.widget.CardView>